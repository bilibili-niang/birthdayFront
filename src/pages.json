{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^ice-(.*)": "@/components/ice$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/about/index",
      "style": {
        "navigationBarTitleText": "关于此tag",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/read/index",
      "style": {
        "navigationBarTitleText": "阅读",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/addEvents/index",
      "style": {
        "navigationBarTitleText": "记录今日",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/discovery/index",
      "style": {
        "navigationBarTitleText": "发现",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/autonomic/index",
      "style": {
        "navigationBarTitleText": "自律",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/list/index",
      "style": {
        "navigationBarTitleText": "列表",
        "enablePullDownRefresh": true,
        "navigationStyle": "custom",
        "onReachBottomDistance": 200
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "enablePullDownRefresh": true,
        "navigationBarTitleText": "我",
        "onReachBottomDistance": 200
      }
    },
    {
      "path": "pages/friend/detail/index",
      "style": {
        "enablePullDownRefresh": true,
        "navigationBarTitleText": "联系人详情",
        "onReachBottomDistance": 200
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "backgroundColor": "#ffffff",
    "color": "#666666",
    "selectedColor": "#ff4437",
    "borderStyle": "white",
    "fontSize": "18px",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/icon/home.png",
        "selectedIconPath": "static/icon/home-actived.png"
      },
      {
        "pagePath": "pages/discovery/index",
        "text": "发现",
        "iconPath": "static/icon/discovery.png",
        "selectedIconPath": "static/icon/discovery-actived.png"
      },
      {
        "pagePath": "pages/mine/index",
        "text": "我的",
        "iconPath": "static/icon/my.png",
        "selectedIconPath": "static/icon/my-actived.png"
      }
    ]
  }
}
